# ============================================================================
# Stream-Guard-Kafka Environment Variables
# Copy this file to .env and adjust values as needed
# ============================================================================

# Application
APP_NAME=Stream-Guard-Kafka
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_TRANSACTIONS_TOPIC=transactions
KAFKA_FRAUD_ALERTS_TOPIC=fraud_alerts
KAFKA_CONSUMER_GROUP_ID=fraud-detector-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_MAX_POLL_RECORDS=500
KAFKA_SESSION_TIMEOUT_MS=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=fraud_detection
DB_USER=streamguard
DB_PASSWORD=streamguard_2024
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Producer Configuration
PRODUCER_BATCH_SIZE=3000
PRODUCER_DELAY_BETWEEN_BATCHES=2
PRODUCER_FRAUD_PROBABILITY=0.12
PRODUCER_TRANSACTIONS_PER_SECOND=10

# Fraud Detection Rules
FRAUD_HIGH_AMOUNT_THRESHOLD=5000.00
FRAUD_RISK_START_HOUR=22
FRAUD_RISK_END_HOUR=6
FRAUD_MAX_TRANSACTIONS_PER_MINUTE=3
FRAUD_VELOCITY_CHECK_ENABLED=true
